{
  "name": "abstract-ui",
  "version": "0.1.0",
  "scripts": {
    "start": "start-storybook -p 9009 -s public",
    "build": "build-storybook -s public",
    "format": "npx prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "git": {
    "core.editor": "code"
  },
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react-hooks/exhaustive-deps": 0,
      "jsx-a11y/alt-text": 0,
      "no-empty-pattern": 0
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=10.16.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "deepmerge": "^4.2.2",
    "is-fn": "^2.0.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.13.1",
    "react-draggable": "^4.4.2",
    "react-responsive": "^8.1.0",
    "react-scripts": "3.4.1",
    "react-sizeme": "^2.6.12",
    "react-textarea-autosize": "^8.0.1",
    "simplebar-react": "^2.2.0",
    "use-force-update": "^1.0.7"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.0.0",
    "@storybook/react": "^5.3.19",
    "babel-plugin-module-resolver": "^4.0.0",
    "prettier": "^2.0.5"
  },
  "private": false,
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "repository": {
    "url": "git@github.com:iTonyYo/abstract-ui.git",
    "type": "git"
  },
  "homepage": "https://github.com/iTonyYo/abstract-ui",
  "bugs": "https://github.com/iTonyYo/abstract-ui/issues",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
